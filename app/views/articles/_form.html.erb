<%= render 'shared/errors', obj: @article %>
<div class="row">
  <div class="col-md-12">
<%= form_for @article do |f| %>
    <div class="form-group row">
      <%= f.label :title , class: "col-sm-2 col-form-label", for:"inputEmail3"%>
      <div class="col-sm-10">
        <%= f.text_field :title,class:"form-control", id:"inputEmail3", placeholder:"Title" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :description , class: "col-sm-2 col-form-label"%><br/>
      <div class="col-sm-10">
        <%= f.text_area :description ,class:"form-control", id:"inputPassword3", placeholder:"Description"%>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-primary btn-lg'%>
      </div>
    </div>
<% end %>
<div class="col-xs-4 col-xs-offset-4" align="center">
  [ <%= link_to "Cancel request and return to article listing", articles_path %> ]
</div>

</div>
</div>
